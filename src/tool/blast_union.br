#! ${BRMETA}

pipe BlastOverlaplessUnion {
    name "Add non-intersecting blast hits";
    add AddBlocks;
    add AddBlastBlocks target=hits other=target;
    add Filter;
    add UniqueNames target=hits;
    add Output target=hits prefix|hits-;
    add OverlaplessUnion target=target other=hits;
    add MetaAligner;
    add Filter;
    add OutputPipe;
};

run BlastOverlaplessUnion;

